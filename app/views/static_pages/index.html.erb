<!doctype html>
<html lang="eng">

  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  </head>
  <style>
    html,
      body {
        height: 100%;
      }

      body {
        display: -ms-flexbox;
        display: -webkit-box;
        display: flex;
        -ms-flex-align: center;
        -ms-flex-pack: center;
        -webkit-box-align: center;
        align-items: center;
        -webkit-box-pack: center;
        justify-content: center;
        <!-- padding-top: 10px; -->
        padding-bottom: 40px;
        background-color: #f5f5f5;
      }

      img {
        width: 100%;
        margin-bottom: 10px;
      }

      .btn {
        width: 25%;
        margin: 0 auto;
        color: white;
        padding: 10px;
      }

      .welcome-image-container {
        width: 100%;
        max-width: 675px;
        margin: 0 auto;
      }
  </style>
  <body>
    <div class="welcome-image-container">
      <%= image_tag("motivate", alt: "motivational quote", class: "img-fluid", size: "700x700") %>
      <%= link_to('Sign up', signup_path, class: "btn btn-lg btn-secondary btn-block") %>
      <%= link_to('Sign in', login_path, class: "btn btn-lg btn-secondary btn-block") %>
    </div>
  </body>
</html>
