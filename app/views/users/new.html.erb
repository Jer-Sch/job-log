<!doctype html>
<html lang="eng">

  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  </head>
  <style>
    html,
      body {
        height: 100%;
      }

      body {
        display: -ms-flexbox;
        display: -webkit-box;
        display: flex;
        -ms-flex-align: center;
        -ms-flex-pack: center;
        -webkit-box-align: center;
        align-items: center;
        -webkit-box-pack: center;
        justify-content: center;
        <!-- padding-top: 10px; -->
        padding-bottom: 40px;
        background-color: #f5f5f5;
      }

      img {
        width: 100%;
        margin-top: -70px;
      }

      .form-signin {
        width: 100%;
        max-width: 330px;
        padding: 15px;
        margin: 0 auto;
      }

      .form-signin .form-control {
        position: relative;
        box-sizing: border-box;
        height: auto;
        padding: 10px;
        font-size: 16px;
      }

      .form-signin .form-control:focus {
        z-index: 2;
      }

      .form-signin input[type="email"] {
        margin-bottom: -1px;
        border-bottom-right-radius: 0;
        border-bottom-left-radius: 0;
      }

      .form-signin input[type="password"] {
        margin-bottom: 10px;
        border-top-left-radius: 0;
        border-top-right-radius: 0;
      }
  </style>
  <body class="text-center">

    <% if flash[:alert] %>
      <div class="alert"><%= flash[:alert] %></div> -->
    <% end %>

    <%= form_for @user, :html => {class: "form-signin"}, url: {action: "create"} do |f| %>
      <%= image_tag("logo", alt: "logo", size: "340x127") %>
      <h1 class="h3 mb-3 font-weight-normal">Sign up</h1>
      <%= f.label :name, class: "sr-only" %>
      <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
      <%= f.label :email, class: "sr-only" %>
      <%= f.text_field :email, class: "form-control", placeholder: "Email address" %>
      <%= f.label :password, class: "sr-only" %>
      <%= f.password_field :password, class: "form-control", placeholder: "Password"%>
      <%= f.submit 'Sign up', class: "btn btn-lg btn-primary btn-block" %>
      <p class="mt-5 mb-3"><%= link_to('Sign in instead', login_path) %></p>
      <p><%= link_to('Sign up with GitHub', '/auth/github', method: :post) %></p>
    <% end %>
  </body>
</html>
