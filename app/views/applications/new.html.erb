<%= form_for @application, url: {action: "create"} do |f| %>
  <%= f.select(:company_name, @user.companies.collect {|c| c.name }, :prompt => "Please select the company you are applying to:") %>
  <%= f.date_field :date %>
  <%= f.radio_button :followup, "Followed Up?" %>
  <%= f.text_area :response %>
  <%= f.submit "Submit Application" %>
<% end %>

<%= link_to("Sign Out", logout_path, method: :delete) %>
